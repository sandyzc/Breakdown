<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Breakdown" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Primary brand color. -->


        <item name="colorPrimary">#2e001f</item>
        <item name="colorPrimaryDark">#0f0000</item>
        <item name="colorPrimaryVariant">#592946</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ffffff</item>
        <item name="colorSecondaryVariant">#cccccc</item>
        <item name="colorOnSecondary">#ffffff</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RoundShapeTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceMediumComponent">@style/RoundShapeAppearance</item>
        <item name="colorSurface">@android:color/transparent</item>
        <item name="elevation">8dp</item>

    </style>

    <style name="RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <style name="spinnerTheme">
        <item name="android:textColor">#592946</item>
    </style>

    <style name="Theme.Breakdown.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>

    <style name="Theme.Breakdown.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Breakdown.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Breakdown.Fullscreen" parent="Theme.Breakdown">
        <item name="android:actionBarStyle">@style/Widget.Theme.Breakdown.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Breakdown.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
</resources>